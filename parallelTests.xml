<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="All tests" parallel="tests" thread-count="1">
    <test name="Chrome_Tests" parallel="classes" thread-count="1">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="AccountCreationTests"/>
            <class name="FieldsValidationTests"/>
        </classes>
    </test>

    <test name="FireFox_Tests" parallel="classes" thread-count="3">
        <parameter name="browser" value="FireFox"/>
        <classes>
            <class name="AccountCreationTests"/>
            <class name="FieldsValidationTests"/>
        </classes>
    </test>

    <test name="Edge_Tests" parallel="classes" thread-count="3">
        <parameter name="browser" value="Edge"/>
        <classes>
            <class name="AccountCreationTests"/>
            <class name="FieldsValidationTests"/>
        </classes>
    </test>
</suite>